@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

@{
    Layout = "_Layout";
}

<h1 class="text-center text-primary" style="font-family: 'Arial', sans-serif;">Editar</h1>

<h4 class="text-center text-secondary" style="font-family: 'Arial', sans-serif;">Cliente</h4>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            
            <div class="form-group">
                <label asp-for="Nome" class="control-label" style="font-family: 'Arial', sans-serif;"></label>
                <input asp-for="Nome" class="form-control" style="border-radius: 10px; font-family: 'Arial', sans-serif;" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label" style="font-family: 'Arial', sans-serif;"></label>
                <input asp-for="Nascimento" class="form-control" style="border-radius: 10px; font-family: 'Arial', sans-serif;" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center">
                <input type="submit" value="Salvar" class="btn" style="background-color: #FF66B2; color: white; border-radius: 20px; padding: 10px 20px; font-family: 'Arial', sans-serif; border: none;" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-link" style="font-family: 'Arial', sans-serif; color: #FF66B2; text-decoration: none;">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
