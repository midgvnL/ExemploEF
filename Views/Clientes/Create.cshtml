@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Criar Usuário";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Tema Scooby-Doo */
        body {
            background-color: #f1c40f; /* Cor amarelo Scooby-Doo */
            font-family: 'Comic Sans MS', sans-serif;
            color: #2c3e50;
            margin: 0;
            padding: 0;
        }

        /* Título principal */
        h1 {
            color: #8e44ad; /* Roxo inspirado no Scooby-Doo */
            font-size: 3rem;
            text-align: center;
            margin-top: 50px;
            font-weight: 700;
            font-family: 'Comic Sans MS', sans-serif;
            text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
        }

        /* Subtítulo */
        h4 {
            color: #2ecc71; /* Verde de Scooby-Doo */
            font-size: 1.8rem;
            text-align: center;
            margin-bottom: 20px;
        }

        hr {
            border-top: 2px solid #8e44ad; /* Roxo */
            width: 60%;
            margin: 20px auto;
        }

        /* Estilo do contêiner do formulário */
        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
            padding: 40px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Estilo dos campos de entrada */
        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 25px;
            padding: 15px;
            font-size: 1rem;
            border: 1px solid #8e44ad; /* Roxo de Scooby-Doo */
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #2ecc71; /* Verde Scooby-Doo */
            box-shadow: 0 0 8px rgba(46, 204, 113, 0.5);
        }

        /* Estilo do botão de criação */
        .btn-primary {
            background-color: #8e44ad; /* Roxo Scooby-Doo */
            border: none;
            color: #fff;
            font-size: 1.2rem;
            padding: 12px 25px;
            border-radius: 30px;
            width: 100%;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #9b59b6; /* Roxo claro quando o mouse passa */
        }

        /* Link de voltar para a lista */
        a {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: #8e44ad; /* Roxo Scooby-Doo */
            font-size: 1rem;
            font-weight: 500;
            text-align: center;
            width: 100%;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #2ecc71; /* Verde quando o mouse passa */
            text-decoration: underline;
        }

        /* Efeito de sombras para dar uma sensação divertida e levemente lúdica */
        .form-group, .btn-primary, a {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
        }

        .form-group:hover, .btn-primary:hover, a:hover {
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
        }

        /* Responsividade */
         (max-width: 768px) {
            .container {
                padding: 20px;
            }

            h1 {
                font-size: 2.5rem;
            }

            h4 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <h4>Crie um novo cliente</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome do Cliente</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nascimento" class="control-label">Data de Nascimento</label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>

        <a asp-action="Index">Voltar para a lista</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
</html>
