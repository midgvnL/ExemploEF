@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Arial', sans-serif;
        }

        .container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
        }

        h1 {
            color: #2c3e50;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        h4 {
            color: #2980b9;
            font-size: 1.75rem;
        }

        dt {
            font-weight: bold;
            color: #34495e;
        }

        dd {
            font-size: 1.1rem;
            color: #7f8c8d;
        }

        a {
            color: #e74c3c;
            text-decoration: none;
            font-weight: bold;
            padding: 10px;
            border-radius: 5px;
            border: 2px solid #e74c3c;
            transition: all 0.3s ease;
        }

            a:hover {
                background-color: #e74c3c;
                color: white;
                border-color: #e74c3c;
            }

        .action-buttons {
            margin-top: 20px;
        }

        .btn {
            border-radius: 50px;
            font-weight: bold;
            padding: 10px 25px;
            margin-right: 15px;
        }

        .btn-edit {
            background-color: #2ecc71;
            color: white;
            border: none;
        }

            .btn-edit:hover {
                background-color: #27ae60;
            }

        .btn-back {
            background-color: #f39c12;
            color: white;
            border: none;
        }

            .btn-back:hover {
                background-color: #e67e22;
            }

        hr {
            border-top: 2px solid #ecf0f1;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div>
            <h4>Cliente</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nascimento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nascimento)
                </dd>
            </dl>
        </div>

        <div class="action-buttons">
            <a class="btn btn-edit" asp-action="Edit" asp-route-id="@Model?.ClienteId">Editar</a>
            <a class="btn btn-back" asp-action="Index">Voltar para a lista</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
