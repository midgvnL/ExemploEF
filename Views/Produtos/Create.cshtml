@model ExemploEF.Models.Produto

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>

<!-- Link do Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<!-- Estilo personalizado -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f3e5f5; /* Fundo roxo claro */
        color: #5e35b1; /* Cor do texto roxa escura */
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    h1 {
        text-align: center;
        color: #6a1b9a; /* Roxo mais forte para o título */
        margin-top: 40px;
        font-size: 2.5em;
    }

    h4 {
        color: #8e24aa; /* Roxo suave para o subtítulo */
        font-size: 1.8em;
        margin-bottom: 20px;
    }

    hr {
        border: 0;
        height: 1px;
        background-color: #ab47bc; /* Roxo intermediário para a linha */
        width: 50%;
        margin: 10px auto;
    }

    .container {
        margin-top: 30px;
    }

    .form-container {
        background-color: #fff;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        color: #8e24aa;
        font-weight: bold;
    }

    input[type="text"],
    input[type="number"],
    select {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ab47bc;
        border-radius: 5px;
        background-color: #f3e5f5; /* Fundo suave no input */
        color: #5e35b1;
    }

    input[type="text"]:focus,
    input[type="number"]:focus,
    select:focus {
        outline: none;
        border-color: #7b1fa2; /* Roxo mais forte no foco */
        background-color: #e1bee7;
    }

    .btn-primary {
        background-color: #8e24aa; /* Botão roxo suave */
        color: white;
        padding: 10px 30px;
        font-size: 1.2em;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #7b1fa2; /* Botão roxo mais escuro no hover */
    }

    a {
        color: #8e24aa; /* Cor roxa suave para o link */
        text-decoration: none;
        font-size: 1.2em;
        margin-top: 20px;
        display: inline-block;
        padding: 10px 20px;
        border: 1px solid #8e24aa;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    a:hover {
        background-color: #e1bee7;
        color: #5e35b1;
    }

     screen and (max-width: 768px) {
        .form-container {
            padding: 20px;
        }

        h1 {
            font-size: 2em;
        }

        h4 {
            font-size: 1.5em;
        }

        .btn-primary {
            width: 100%;
        }

        a {
            font-size: 1em;
            padding: 8px 15px;
        }
    }
</style>
</head>
<body>
    <div class="container">
        <h1>Criar Produto</h1>

        <h4>Produto</h4>
        <hr />

        <div class="form-container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estoque" class="control-label"></label>
                    <input asp-for="Estoque" class="form-control" />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>

            <a asp-action="Index">Voltar para a lista</a>
        </div>
    </div>

    <!-- Link do Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</html>