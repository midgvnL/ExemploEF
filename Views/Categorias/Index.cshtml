@model IEnumerable<ExemploEF.Models.Categoria>

@{
    ViewData["Title"] = "CATEGORIA";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Fundo escuro com toque neon */
        body {
            background-color: #121212; /* Fundo escuro */
            color: #f5f5f5;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Estilo do título */
        h1 {
            color: #39ff14; /* Verde neon */
            font-size: 3rem;
            text-align: center;
            margin-top: 50px;
            text-transform: uppercase;
            letter-spacing: 5px;
            text-shadow: 0 0 20px rgba(57, 255, 20, 0.9);
        }

        /* Estilo do link "Create New" */
        p a {
            color: #ff3b00; /* Laranja neon */
            text-decoration: none;
            font-weight: bold;
            font-size: 1.25rem;
            padding: 10px 20px;
            background-color: transparent;
            border: 2px solid #ff3b00;
            border-radius: 25px;
            transition: all 0.3s ease;
            display: inline-block;
            margin-bottom: 20px;
        }

        p a:hover {
            background-color: #ff3b00;
            color: #fff;
            box-shadow: 0 0 15px rgba(255, 59, 0, 0.7);
        }

        /* Estilo da tabela */
        table {
            width: 90%;
            margin: 0 auto;
            border-collapse: collapse;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        th, td {
            text-align: center;
            padding: 12px;
            border: 1px solid #333;
            font-size: 1.1rem;
        }

        th {
            background-color: #282828;
            color: #ffffff; /* Cor da fonte do nome da tabela em branco */
        }

        tr {
            background-color: #1c1c1c;
        }

        tr:hover {
            background-color: #333;
        }

        td a {
            color: #39ff14; /* Verde neon */
            text-decoration: none;
            font-weight: bold;
            padding: 5px;
            transition: all 0.3s ease;
        }

        td a:hover {
            color: #ff3b00; /* Laranja neon */
            text-shadow: 0 0 10px rgba(255, 59, 0, 0.7);
        }

        /* Efeito neon nos links e botões */
        .neon-button {
            color: #39ff14;
            font-weight: bold;
            border: 2px solid #39ff14;
            padding: 10px 25px;
            border-radius: 50px;
            font-size: 1.25rem;
            text-transform: uppercase;
            background-color: transparent;
            transition: all 0.3s ease;
            box-shadow: 0 0 10px rgba(57, 255, 20, 0.7);
        }

        .neon-button:hover {
            background-color: #39ff14;
            color: #fff;
            box-shadow: 0 0 20px rgba(57, 255, 20, 1);
        }

        /* Adicionando fundo animado futurista */
        .background-effect {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(57, 255, 20, 0.7), rgba(255, 59, 0, 0.7));
            background-size: 400% 400%;
            animation: gradient 10s ease infinite;
            z-index: -1;
        }

        /* Animação do gradiente de fundo */
            gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>
</head>
<body>

<!-- Efeito de fundo animado -->
<div class="background-effect"></div>

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a class="neon-button" asp-action="Create">Criar Nova Categoria</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>
                        <a class="neon-button" asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> |
                        <a class="neon-button" asp-action="Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
                        <a class="neon-button" asp-action="Delete" asp-route-id="@item.CategoriaId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
