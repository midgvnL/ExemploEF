@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Link para o Bootstrap ou outra biblioteca de estilo -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Fundo e cores inspirados no oceano */
        body {
            background: linear-gradient(to bottom, #6db4b6, #004c6d); /* Gradiente de azul */
            font-family: 'Arial', sans-serif;
            color: #ffffff;
            margin: 0;
            padding: 0;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8); /* Leve transparência para um fundo suave */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 40px;
            max-width: 700px; /* Limita a largura da caixa */
            margin-left: auto;
            margin-right: auto;
        }

        h1, h4 {
            text-align: center;
            color: #004c6d;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        h4 {
            font-size: 1.5rem;
            font-weight: 300;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            color: #66c0d2; /* Cor suave inspirada no mar */
            font-weight: bold;
        }

        input.form-control {
            background-color: #e0f7fa; /* Azul claro inspirado na cor das águas rasas */
            border: 1px solid #66c0d2;
            border-radius: 5px;
        }

            input.form-control:focus {
                border-color: #00838f; /* Cor mais intensa quando o campo está em foco */
                box-shadow: 0 0 5px rgba(0, 131, 143, 0.7);
            }

        .btn-primary {
            background-color: #00838f; /* Azul intenso */
            border-color: #006f77;
            font-size: 1.1rem;
            padding: 12px 20px;
            border-radius: 5px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #006f77;
                border-color: #004c6d;
            }

        .text-danger {
            color: #ff6f61; /* Vermelho suave para mensagens de erro */
        }

        a {
            color: #66c0d2;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            text-align: center;
        }

            a:hover {
                text-decoration: underline;
            }

    </style>
</head>

<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <h4>Crie uma nova categoria</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome da Categoria</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>

        <!-- Ajustando o link de volta para a lista -->
        <a asp-action="Index">Voltar para a lista</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
