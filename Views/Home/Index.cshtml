@{
    ViewData["Title"] = "Página Inicial";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Fundo escuro e detalhes futuristas */
        body {
            background-color: #121212;
            color: #f5f5f5;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        /* Efeito de brilho no texto */
        h1, p {
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.5), 0 0 20px rgba(255, 255, 255, 0.3), 0 0 30px rgba(255, 255, 255, 0.1);
        }

        h1.display-4 {
            font-size: 3.5rem;
            color: #00d4ff; /* Azul ciano futurista */
            margin-top: 100px;
            text-transform: uppercase;
            letter-spacing: 5px;
        }

        p {
            font-size: 1.25rem;
            color: #ccc;
        }

        /* Link estilizado com cor futurista */
        a {
            color: #ff4f00; /* Laranja intenso */
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        a:hover {
            color: #f1c40f; /* Amarelo dourado */
            text-decoration: underline;
        }

        /* Contêiner centralizado */
        .container {
            padding-top: 80px;
            padding-bottom: 80px;
            position: relative;
            z-index: 1;
        }

        /* Efeito de fundo com animação futurista */
        .background-effect {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(0, 0, 0, 0.8), rgba(20, 20, 20, 0.8));
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
            z-index: -1;
        }

        /* Animação do gradiente */
            gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>
</head>
<body>

    <!-- Efeito de fundo animado -->
    <div class="background-effect"></div>

    <div class="container text-center">
        <h1 class="display-4">Bem-Vindo</h1>
        <p>Saiba mais sobre <a href="https://learn.microsoft.com/aspnet/core">como construir aplicativos web com ASP.NET Core</a>.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
